{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "declaration": true,
    "target": "esnext",
    "module": "commonjs",
    "types": [
      "node",
      "jest"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "importsNotUsedAsValues": "error"
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/.*/",
    "jest.config.ts"
  ]
}
